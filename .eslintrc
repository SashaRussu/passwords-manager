{
  "extends": ["react-app", "airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "import/newline-after-import": "error",
    "react/prop-types": 2,
    "react/no-unused-prop-types": 2,
    "react/no-multi-comp": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-uses-vars": 2,
    "react/no-deprecated": 2,
    "react/sort-comp": 2,
    "react/jsx-key": 2,
    "newline-before-return": 2,
    "import/no-unresolved": 0,
    "import/order": [
      "error",
      { "groups": ["external", "parent", "sibling", "builtin", "internal", "index"] }
    ]
  },
  "globals": {
    "window": true,
    "document": true,
    "localStorage": true,
    "FormData": true,
    "FileReader": true,
    "Blob": true,
    "navigator": true
  },
  "parser": "babel-eslint"
}
